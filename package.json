{
  "name": "demo-playwright",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "install:browsers": "npx playwright install chromium",
    "pretest": "ts-node src/utility/clearAllure.ts",
    "test": "npm run pretest && npx playwright test --headed --grep @prodSanity",
    "debug": "npm run pretest && npx playwright test --debug --grep @prodSanity",
    "allure:generate": "npx allure-commandline generate ./allure-results --clean",
    "allure:open": "npx allure-commandline open",
    "allure:report": "npm run allure:generate && npm run allure:open",
    "ci:allure:report": "allure generate allure-results --clean -o allure-report"
  },
