  "devDependencies": {
    "@playwright/test": "^1.51.0",
    "@types/node": "^22.13.10",
    "allure-commandline": "^2.33.0",
    "allure-playwright": "^3.4.5",
    "ts-node": "^10.9.2",
    "tsc-files": "^1.1.4",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "dotenv": "^16.4.7"
  }
